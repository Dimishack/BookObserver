<UserControl x:Class="BookObserver.Views.UserControl.BooksUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookObserver.Views.UserControl"
             xmlns:vm="clr-namespace:BookObserver.ViewModels"
             d:DataContext="{d:DesignInstance vm:BooksUserControlViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Books}"
                  AutoGenerateColumns="False">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="п\п" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="ББК" Binding="{Binding BBK}" Width="Auto"/>
                <DataGridTextColumn Header="Издательство" Binding="{Binding Publish}" Width="Auto"/>
                <DataGridTextColumn Header="Страниц" Binding="{Binding Pages}" Width="Auto"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author}" Width="Auto"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
