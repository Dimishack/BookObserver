<UserControl x:Class="BookObserver.Views.UserControl.BooksUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookObserver.Views.UserControl"
             xmlns:vm="clr-namespace:BookObserver.ViewModels"
             d:DataContext="{d:DesignInstance vm:BooksUserControlViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid>
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="п\п" Width="Auto"/>
                <DataGridTextColumn Header="ББК" Width="Auto"/>
                <DataGridTextColumn Header="Издательство" Width="Auto"/>
                <DataGridTextColumn Header="Страниц" Width="Auto"/>
                <DataGridTextColumn Header="Автор" Width="Auto"/>
                <DataGridTextColumn Header="Название" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
